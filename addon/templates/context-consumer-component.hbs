<h2>Context Consumer Component</h2>

{{#my-context/provider
  value=(if updatedContext
    updatedContext
    (hash testValue="original value")
  )
}}
  {{#my-context/consumer as |context|}}
    <div>
      <strong>Context value:</strong>
      <span id="context-value">{{context.testValue}}</span>
    </div>
  {{/my-context/consumer}}

  {{#unless updatedContext}}
    <div>
      <button
        id="update-context-button"
        {{action (action (mut updatedContext) (hash testValue="updated value"))}}
      >
        Update context
      </button>
    </div>
  {{/unless}}
{{/my-context/provider}}
